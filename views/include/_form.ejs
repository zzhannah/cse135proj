<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email" value="" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="Password" class="text-light">Password</label>
            <input type="password" name="password" value="" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="role" class="text-light">Role</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="role" value="basic" >
                <label for="radio-2" class="radio-label">Basic</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="role" value="admin" >
                <label for="radio-3" class="radio-label">Admin</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update" style="color: white;">Save</button>
        </div>

    </div>
</form>